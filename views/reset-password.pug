doctype html
html
  head
    meta(charset='utf-8')
    title Consense - Reset Password
    base(href='/')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='icon' type='image/x-icon' href='/assets/image/favicon.ico')
    link(href='/assets/css/sweetalert2.min.css' rel='stylesheet')
    script(src='/assets/js/sweetalert2.all.min.js')
    script(src='/assets/js/jquery.min.js')
    link(href='/assets/css/bootstrap.min.css' rel='stylesheet')
    script(src='/assets/js/bootstrap.min.js')
    style.
      .pt-5 { padding-top: 3rem !important; }
      .auth-one-bg { background-position: center; background-size: contain; }
      .auth-one-bg-position { position: absolute; top: 0; left: 0; right: 0; width: 100%; height: 380px; }
      .auth-one-bg .bg-overlay { background: linear-gradient(to right, #215196, #215196); opacity: 0.9; }
      .bg-overlay { position: absolute; height: 100%; width: 100%; right: 0; bottom: 0; left: 0; top: 0; opacity: 0.7; background-color: #000; }
      .btn-success { background-color: #215196 !important; }
      .shape { position: absolute; bottom: 0; right: 0; left: 0; pointer-events: none; }
      .shape > svg { width: 100%; height: auto; fill: #fff; }
      .auth-page-wrapper .auth-page-content { padding-bottom: 60px; position: relative; z-index: 2; width: 100%; }
      .mtmargin-4 { margin-top: 7.5rem !important; }
  body
    .auth-page-wrapper.pt-5
    .auth-one-bg-position.auth-one-bg#auth-particles
      .bg-overlay
      .shape
        svg(xmlns='http://www.w3.org/2000/svg' version='1.1' viewBox='0 0 1440 120')
          path(d='M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z')
    .auth-page-content
      .container
        .row.justify-content-center
          .col-md-8.col-lg-6.col-xl-5
            .card.mtmargin-4
              .card-body.p-4
                .text-center.mt-2
                  .mb-3
                    a.d-inline-block.auth-logo(routerLink='/')
                      img(src='/assets/image/consense-logo.png' alt='' height='20')
                  h5.text-primary Welcome Back !
                  p.text-muted Reset Password Consense.
                .p-2.mt-4
                  form.password-form
                    .mb-3
                      label.form-label(for='password-input') Password
                      .position-relative.auth-pass-inputgroup.mb-3
                        input.form-control.pe-5(type='password' placeholder='Enter password' name='password')
                        input(type='hidden' name='token' value='#{data.token}')
                    .mt-4
                      button.btn.btn-success.w-100(type='submit') Reset
    footer.footer
      .container
        .row
          .col-lg-12
            .text-center
              p.mb-0.text-muted &copy; 2024 Consense.
    script(src='/assets/js/script.js')
